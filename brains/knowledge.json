{
"keywords": [
	{
		"keyword": ["Bonjour", "Hello", "Salut", "Hey", "Hola", "Hi", "Yo", "Wesh", "Ouesh"],
		"priority": 3,
		"defaultResponses": [
			"Bonjour, comment vas-tu ?",
			"Tu vas bien ?",
			"Salut !",
			"Yo, ça roule ?"
		],
		"variances": [
			{
				"variance": "${keyword} .*@{ami}",
				"responses": [
					"Salut mon ${1} :-)",
					"Bonjour cher ${1} !",
					"Salutations noble ${1}"
				]
			},
			{
				"variance": "${keyword} .*@{amie}",
				"responses": [
					"Salut mon ${1} :-)",
					"Bonjour chère ${1} !"
				]
			},
			{
				"variance": "${keyword}.*@{ami}.*@{faim}",
				"responses": [
					"Salut, moi aussi, j'ai ${2}.",
					"Bonjour, pourquoi as-tu ${2} ?",
					"Salut. ${2|ucfirst} de quoi ?",
				]
			},
		]
	},
	{
		"keyword": ["Aurevoir", "Bye"],
		"priority": 2,
		"defaultResponses": [
			"A bientôt !",
			"Bonne journée, monseigneur.",
			"A plus mec"
		],
		"variances": [
			{
				"variance": "${keyword} .*@{ami}",
				"responses": [
					"Cia"
				]
			},
		]
	},
	{
		"keyword": ["Comment"],
		"priority": 3,
		"defaultResponses": [
			"Comment que où ?",
		],
		"variances": [
			{
				"variance": "${keyword} (.*)",
				"responses": [
					"Tu m'as eu !",
					"Demande à [lien=http://fr.wikipedia.org/wiki/Spécial:Recherche/${1|clean}]Wikipédia[/lien]"
				]
			},
			{
				"variance": "${keyword} vas[ -]?tu",
				"responses": [
					"Je ne sais pas trop...",
					"ça roule !",
					"Je vais bien, merci de demander."
				]
			},
			{
				"variance": "${keyword} est[ -]?ce (.*)",
				"responses": [
					"Connais-tu [lien=http://fr.wikipedia.org/wiki/Spécial:Recherche/${1|clean}]Wikipédia[/lien] ?",
					"[lien=https://duckduckgo.com/?q=${1}]DuckDuckGo est ton ami[/lien]"
				]
			},
			{
				"variance": "${keyword} est (.*)",
				"responses": [
					"Je ne sais pas moi ! [lien=https://duckduckgo.com/?q=${1|clean}]DuckDuckGo est ton ami[/lien] !",
					"Demande à [lien=http://fr.wikipedia.org/wiki/Spécial:Recherche/${1|clean}]Wikipédia[/lien]"
				]
			},
		]
	},
	{
		"keyword": ["Qui"],
		"priority": 2,
		"defaultResponses": [
			"Qui que quoi ?",
		],
		"variances": [
			{
				"variance": "${keyword} est (.*)",
				"responses": [
					"Connais-tu [lien=http://fr.wikipedia.org/wiki/Spécial:Recherche/${1|clean}]Wikipédia[/lien] ?",
					"[lien=https://duckduckgo.com/?q=${1|clean}]DuckDuckGo est ton ami[/lien]"
				]
			},
		]
	},
	{
		"keyword": ["Heure", "Horaire"],
		"priority": 2,
		"defaultResponses": [
			"Je serais toi, j'achèterai une montre.",
		],
		"variances": [
			{
				"variance": "(?:Quelle ${keyword} est[ -]?il|A(?:aurai)s?[ -]?tu .*${keyword})",
				"responses": [
					"Il est ${time}",
					"${time}, si je ne m'abuse.",
					"Laisse-moi regarder... ${time} !"
				]
			},
			{
				"variance": "L'${keyword}",
				"responses": [
					"Il est ${time}. Tu n'as qu'à demander !",
				]
			},
		]
	},
	{
		"keyword": [],
		"priority": 0,
		"defaultResponses": [
			"Désolé je n'ai rien compris.",
			"Tu peux reformuler s'il te plait ?",
			"Peux-tu formuler autrement ?"
		]
	},
]
}
